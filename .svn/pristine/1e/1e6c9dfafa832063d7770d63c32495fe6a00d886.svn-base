  createTour(userPreference: any): Promise<any> {
    const user = JSON.parse(localStorage.getItem('user'))
    const authHeader = {
      headers: {
        'Content-Type': 'application/json',
        'Access-Control-Allow-Origin': '*',
        'Authorization': user.token
      }
    };
    console.log(userPreference, 'userPreference');

    return this.http.post<any>(`${API_URL}/tour/create`, userPreference, authHeader).toPromise()
      .then(response => {
        console.log(response, 'Response from create tour')
        return response
      })
      .catch(error => {
        console.log(error)
        return false;
      })
  }
